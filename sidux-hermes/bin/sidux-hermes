#!/bin/bash
# sidux-hermes
# Copyright (c) 2007 Fabian Wuertz
# License GPL 2


#------------------------------------------------------------------------------#
#--- sidux warnings & news ----------------------------------------------------#
#------------------------------------------------------------------------------#


function sidStatus()
{
	TMP="$(mktemp -p /tmp/ du-warning-XXXXXXXXXX)"
	wget -O $TMP -q -U "siduxcc-hermes" http://sidux.com/xBackends.php
	tmp=`cat $TMP`
	if [ -n "$tmp" ]; then 
		a=$( egrep title $TMP | grep ALERT | cut -f2 -d"<" | cut -c7- )
		b=$( egrep title $TMP | grep Alert | cut -f2 -d"<" | cut -c7- )
		c=$( egrep title $TMP | grep alert | cut -f2 -d"<" | cut -c7- )
		s=0
		if [ -n "$a" ]; then
			echo $a
			s=1
		fi
		if [ -n "$b" ]; then
			echo $b
			s=1
		fi
		if [ -n "$c" ]; then
			echo $c
			s=1
		fi
		if [ $s == 0 ]; then
			echo "Everything alright!"
		fi
	else
		echo "No connection to sidux.com!"
	fi
	rm -f $TMP
}


function duWarningsEn()
{
	TMP="$(mktemp -p /tmp/ du-warning-XXXXXXXXXX)"
	wget -O $TMP -q -U "siduxcc-hermes" http://sidux.com/backend.php
	grep -A 1 Warning $TMP
	rm -f $TMP
}

function duWarningsDe()
{
	TMP="$(mktemp -p /tmp/ du-warning-XXXXXXXXXX)"
	wget -O $TMP -q -U "siduxcc-hermes" http://sidux.com/backend.php?newlang=deu
	grep -A 1 Warnung $TMP
	rm -f $TMP
}

function getNewsEn()
{
	TMP="$(mktemp -p /tmp/ sidux-news-XXXXXXXXXX)"
	wget -O $TMP -q -U "siduxcc-hermes" http://sidux.com/backend.php
	grep -A 1 title $TMP | grep -B 1 link
	rm -f $TMP
}

function getNewsDe()
{
	TMP="$(mktemp -p /tmp/ sidux-news-XXXXXXXXXX)"
	wget -O $TMP -q -U "siduxcc-hermes" http://sidux.com/backend.php?newlang=deu
	grep -A 1 title $TMP | grep -B 1 link
	rm -f $TMP
} 

#------------------------------------------------------------------------------#
#--- kernel functions ---------------------------------------------------------#
#------------------------------------------------------------------------------#

function kernelType()
{
	if [ -n "$(uname -r | grep 686)" ]; then
		echo 686
	elif [ -n "$(uname -r | grep amd64)" ]; then
		echo amd64
	fi
}

function currentKernel()
{
	uname -r
}

function newestKernel()
{
	wget -U "siduxcc-hermes" -O - http://sidux.com/debian/pool/main/l/linux-sidux-2.6/ 2>/dev/null | grep linux-image | grep $(kernelType) | tail -n 1 | cut -f8 -d\" | cut -f1 -d_ | cut -f3- -d-
}

#------------------------------------------------------------------------------#
#--- upgradeable packages -----------------------------------------------------#
#------------------------------------------------------------------------------#

function upgradablePackages()
{
	LANG=C apt-show-versions | grep upgradeable
}


#------------------------------------------------------------------------------#
#--- help ---------------------------------------------------------------------#
#------------------------------------------------------------------------------#

function usage()
{
        echo  "$(basename $0)"
        echo  "     -s,  --status                show the status of the debian sid repository"
        echo  "     -ck, --current-kernel        show the version of the current kernel"
        echo  "     -nk, --newest-kernel         show the version of the newest available kernel"
        echo  "     -up, --upgradable-packages   show the upgradable packages"
        echo  "     -h,  --help                  show this usage"
        exit 1
}


#------------------------------------------------------------------------------#
#--- start app ----------------------------------------------------------------#
#------------------------------------------------------------------------------#


case $1 in
	""                      ) sidStatus;;
	"-s"                    ) sidStatus;;
	"--status"              ) sidStatus;;
	"-ck"                   ) currentKernel;;
	"--current-kernel"      ) currentKernel;;
	"-nk"                   ) newestKernel;;
	"--newest-kernel"       ) newestKernel;;
	"-up"                   ) upgradablePackages;;
	"--upgradable-packages" ) upgradablePackages;;
	"-h"                    ) usage;;
	"--help"                ) usage;;
esac